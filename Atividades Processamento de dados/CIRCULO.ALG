Algoritmo "circulo"

Var
   raio_circ, area_circ : real


Inicio

      escreval("Esvreva o raio do circulo")
      leia(raio_circ)
      
      area_circ <- pi * (exp(raio_circ, 2))
      escreval("O raio do círculo é de: ", raio_circ:6:3)
      escreval("A área do círculo é de: ", area_circ:6:3)

Fimalgoritmo